{% extends 'base.html' %}

{% block title %}
Add Post Form
{% endblock %}

{% block main_content %}
<div class="row">
    <div class="col col-span">
    <h2 class="display4">Add a post for {{user.first_name}} {{user.last_name}}</h2>
    <form id='add_post_form' method="POST" action="/users/{{userID}}/posts/new">
        <div class="mb-2 col-sm-3">
            <label for="title" class="form-label">Title</label>
            <input type='text' class ="form-control" id='title' name='title'>
        </div>
        <div class="mb-2 col-sm-3 shadow-textarea">
            <label for="content" class="form-label">Content</label>
            <textarea id="content" name='content' class="form-control z-depth-1" rows="4" placeholder="Write your content here..." form="add_post_form"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Add</button>  <a href='/users/{{userID}}'><button type="button" class="btn btn-warning">Cancel</button></a>
    </form>
    </div>
</div>
{% endblock %}