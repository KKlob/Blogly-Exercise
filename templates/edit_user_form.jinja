{% extends 'base.html' %}

{% block title %}
Edit User Form
{% endblock %}

{% block main_content %}
    <h2>Edit a user</h2>
    <form id='add_user_form' method="POST" action='/users/{{user.id}}/edit'>
        <p>First Name: <input type='text' id='first_name' name='first_name' value='{{user.first_name}}'></p>
        <p>Last Name: <input type='text' id='last_name' name='last_name' value='{{user.last_name}}'></p>
        <p>Image URL: <input type='url' id='image_url' name='image_url' value='{{user.image_url}}'></p>
        <button>Submit</button>
    </form>
    <p><a href='/users'><button>Cancel</button></a></p>
{% endblock %}