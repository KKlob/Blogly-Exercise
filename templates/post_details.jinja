{% extends 'base.html' %}

{% block title %}
Post Page
{% endblock %}

{% block main_content %}
<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-body">
                <h3>{{post.title}}</h3>
                <p>{{post.content}}</p>
                <p class="fst-italic fs-6">Created by {{post.user.first_name}} {{post.user.last_name}} on {{post.created_at}}</p>
    </div>
</div>
<div class="row mt-2">
    <div class="col-6">
        <div class="row">
            <div class="col">
                <a href="/users/{{post.user_id}}"><button class="btn btn-warning">Cancel</button></a> 
            </div>
            <div class="col">
                <a href="/posts/{{post.id}}/edit"><button class="btn btn-primary">Edit</button></a>
            </div>
            <div class="col">
                <form action="/posts/{{post.id}}/delete" method="POST">
                <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}