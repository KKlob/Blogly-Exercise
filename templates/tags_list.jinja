{% extends 'base.html' %}

{% block title %}
Tags Page
{% endblock %}

{% block main_content %}
    <h2 class="display3">Tags</h2>
    <ul>
        {% for tag in tags %}
        <li><a href='/tags/{{tag.id}}'>{{tag.name}}</a></li>
        {% endfor %}
    </ul>

    <p><a href="/tags/new"><button class="btn btn-primary">Add Tag</button></a></p>
{% endblock %}