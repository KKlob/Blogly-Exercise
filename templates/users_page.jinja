{% extends 'base.html' %}

{% block title %}
Users Page
{% endblock %}

{% block main_content %}
    <h2>Users</h2>
    <ul>
        {% for user in users %}
        <li><a href='/users/{{user.id}}'>{{user.first_name}} {{user.last_name}}</a></li>
        {% endfor %}
    </ul>

    <p><a href="/users/new"><button class="btn btn-primary">Add User</button></a></p>
{% endblock %}